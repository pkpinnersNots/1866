.order .order-item{
  margin-top: 5px;
  padding: 5px;
  background-color: #fff;
  overflow: hidden;
}

.order .order-title{
  overflow: hidden;
  font-size: 12px;
}

.order .order-id{
  float: left;
}

.order .rm{
  float: right;
  color: #e4393c;
}

.order .order-time{
  color: #aaa;
  font-size: 12px;
  margin-top: 10px;
}

.order .item-goods{
  overflow: hidden;
  margin-top: 10px;
  padding-bottom: 10px;
}

.order .line{
  border-bottom: 1px solid #f2f2f2;
}

.order .item-goods-img{
  float: left;
  width: 50px;
}

.order .item-goods-info{
  float: left;
  margin-left: 10px;
}

.order .goods-name{
  color: #333;
  font-size: 14px;
}

.order .goods-box{
  overflow: hidden;
  margin-top: 12px;
}

.order .goods-price{
  float: left;
  font-size: 12px;
  color: #e4393c;
}

.order .goods-count{
  float: left;
  margin-left: 30px;
  font-size: 14px;
  color: #aaa;
}

.order .has-line{
  border-top: 1px solid #f2f2f2;
  padding-top: 10px;
}

.auto-img{
  width: 100%;
  display: block;
}

.hot-price{
  color: #e4393c;
  margin-right: 15px;
  font-size: 14px;
}

.old-price{
  color: #aaa;
  font-size: 12px;
  text-decoration: line-through;
}

.total-money{
  color: #999;
  font-size: 12px;
  float: right;
   margin: 10px 0;
}